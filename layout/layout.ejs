<!DOCTYPE html>
<html class="offwhite-bg">
  <!-- Head tag -->
  <%- partial('_partial/head') %>

  <body>
    <div id="app" class="columns is-gapless-mobile">
      <div class="column is-full-mobile is-three-fifths-desktop is-offset-one-fifth-desktop">
        <!-- Hero -->
        <%- partial('_partial/hero') %>
        <!-- Menu -->
        <%- partial('_partial/nav_menu.ejs') %>
        <div id="wrapper" class="container">
          <div class="columns">
            <!-- Sidebar -->
            <% if (theme.widgets && (page.sidebar !== false)) { %>  
              <div class="column is-one-quarter is-hidden-touch">  
                <%- partial('_partial/sidebar.ejs') %>  
              </div>  
              <% } %>
            <!-- Main Body -->
            <div class="column auto">
              <%- body %>
            </div>
          </div>
        </div>
        <!-- Footer -->
        <%- partial('_partial/footer') %>
        <%- partial('_partial/scripts') %>
      </div>
    </div>
  </body>
</html>
