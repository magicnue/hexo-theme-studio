<% if (post.link){ %>
  <h1 class="is-size-3" itemprop="name">
    <a href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 class="thumb" itemprop="name">
      <a href="<%- url_for(post.path) %>" title="<% post.title %>">
        <%= post.title %>
      </a>
    </h1>
  <% } else { %>
    <h1 class="thumb" itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>

